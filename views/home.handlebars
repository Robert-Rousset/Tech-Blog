<section>
  {{#each blogs as |blog|}}
    <div class="container">
      <a data-set="{{blog.id}}" class="blog" href="/api/viewpost/{{blog.id}}">

        <aside class="aside">

          <h2>{{blog.title}}</h2>
          <p>
            <i><b class="date">Posted on:
                {{format_date blog.createdAt}}</b></i>
          </p>

        </aside>
      </a>

      <div class="card">
        <p>
          {{blog.content}}
        </p>
        <br />
      <p class="by">
-{{blog.user.username}}
      </p>
      </div>
    </div>
  {{/each}}
</section>